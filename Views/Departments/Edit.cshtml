@model cerberus.Models.ViewModels.DepartmentEditModel

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2>Редактирование отдела</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label for="name" class="control-label col-md-2">Название отдела:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите название отдела" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    }

    <div class="form-actions no-color">

    </div>
</div>