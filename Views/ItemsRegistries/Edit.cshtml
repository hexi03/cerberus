@model cerberus.Models.ViewModels.ItemEditModel

<div class="container">
    <h2>Редактирование реестра предметов</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Информация о предмете</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                <label for="name" class="control-label col-md-2">Наименование:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите наименование" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="units" class="control-label col-md-2">Единицы измерения:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.units, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите единицы измерения" } })
                    @Html.ValidationMessageFor(model => model.units, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="batch" class="control-label col-md-2">Партия:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.batch, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите партию" } })
                    @Html.ValidationMessageFor(model => model.batch, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </div>
        </div>
    }

    <div class="container">
        @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>