@model cerberus.Models.ViewModels.ItemViewModel

<div class="container">
    <h2>Информация о предмете</h2>
    <hr />

    <div>
        <h4>Предмет</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="name" class="control-label">Наименование:</label>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                <label for="units" class="control-label">Единицы измерения:</label>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.units)
            </dd>

            <dt>
                <label for="batch" class="control-label">Партия:</label>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.batch)
            </dd>
        </dl>
    </div>

    <div class="form-actions no-color">
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>