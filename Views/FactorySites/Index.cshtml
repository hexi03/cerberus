@model IEnumerable<cerberus.Models.edmx.FactorySite>

 
    <p>
        @if (ViewContext.RouteData.Values.ContainsKey("id"))
        {
            @Html.ActionLink("Create New", "Create", new { id = ViewContext.RouteData.Values["id"] })
        }
        else
        {
            @Html.ActionLink("Create New", "Create")
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <!--
                <th>
                    @Html.DisplayNameFor(model => model.Department.name)
                </th>
            -->
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
                @Html.ActionLink("Manage Supply", "ManageSupply", new { id = item.id }) |
                @Html.ActionLink("Manage Access", "ManageAccess", new { id = item.id })
            </td>
        </tr>
    }
    
    </table>
