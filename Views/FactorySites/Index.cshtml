@model IEnumerable<cerberus.Models.edmx.FactorySite>

<div class="container">
    <p>
        @if (ViewContext.RouteData.Values.ContainsKey("id"))
        {
            @Html.ActionLink("Создать новый", "Create", new { id = ViewContext.RouteData.Values["id"] }, new { @class = "btn btn-primary" })
        }
        else
        {
            @Html.ActionLink("Создать новый", "Create", null, new { @class = "btn btn-primary" })
        }
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <!--<th>@Html.DisplayNameFor(model => model.Department.name)</th>-->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <!--<td>@Html.DisplayFor(modelItem => item.Department.name)</td>-->
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Подробности", "Details", new { id = item.id }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" }) |
                        @Html.ActionLink("Управление поставкой", "ManageSupply", new { id = item.id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Управление доступом", "ManageAccess", new { id = item.id }, new { @class = "btn btn-secondary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>