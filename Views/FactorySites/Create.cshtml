@model cerberus.Models.ViewModels.FactorySiteCreateModel

<div class="container">
    @using (Html.BeginForm("Create", "FactorySites", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h2>Создание FactorySite</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="name" class="control-label col-md-2">Название:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите название FactorySite" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <input name="department_id" type="hidden" value="@ViewContext.RouteData.Values["id"]">

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Создать</button>
            </div>
        </div>
    }

    <div class="form-actions no-color">

    </div>
</div>