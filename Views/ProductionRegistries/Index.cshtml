@model IList<cerberus.Models.ViewModels.ProductionItemViewModel >



    <p>
        @Html.ActionLink("Добавить", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                <p>Наименование</p>
            </th>

            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.production_item.name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.production_item.id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Детали", "Details", new { id = item.production_item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.production_item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    
    </table>

