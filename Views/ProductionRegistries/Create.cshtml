@model cerberus.DTO.ProductionRegistryItem



    @using (Html.BeginForm("Create", "ProductionRegistries", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ProductionRegistry</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.production_item.id, "production_id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("production_id", new SelectList(cerberus.Models.edmx.ItemsRegistry.get_variants(), "id", "name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.production_item.id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="keyValuePairs item-list-controlable-container" data-dname="requirement_ids">

                <button type="button" class="addKeyValuePair">+</button>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

