
@model cerberus.Models.ViewModels.ApplicationUserViewModel

@{
    ViewBag.Title = "Удалить пользователя";
}

<h2>Удалить пользователя</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Имя пользователя:</dt>
        <dd>@Model.UserName</dd>
        <dt>Роли:</dt>
        <dd>
            @if(Model.Groups != null) {
                foreach (var role in Model.Groups)
                {
                    @role.Name
                }
            }
        </dd>
    </dl>
</div>

@using (Html.BeginForm("UserDeleteConfirmed", "GroupUser", new { id = Model.Id }, FormMethod.Post))
{
    <input type="submit" value="Удалить" class="btn btn-danger" />
}

@Html.ActionLink("Отмена", "Index")