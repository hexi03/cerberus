
@model cerberus.Models.ApplicationUser

@{
    ViewBag.Title = "Удалить пользователя";
}

<h2>Удалить пользователя</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Имя пользователя:</dt>
        <dd>@Model.UserName</dd>
        <dt>Роли:</dt>
        <dd>
            @foreach (var role in Model.Roles)
            {
                var identityRoles = (ICollection<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>)ViewBag.Roles;

                @identityRoles.Where(r => r.Id == role.RoleId).First().Name
            }
        </dd>
    </dl>
</div>

@using (Html.BeginForm("UserDeleteConfirmed", "GroupUser", new { id = Model.UserName }, FormMethod.Post))
{
    <input type="submit" value="Удалить"  class="btn btn-danger" />
}

@Html.ActionLink("Отмена", "Index")